{
	"compilerOptions": {
		"resolveJsonModule": true, // Allows importing JSON files as modules
		"types": ["node", "express","jest"], // Includes type definitions for Node.js and Express
		"moduleResolution": "node", // Ensures compatibility with Node.js module resolution
		"target": "ES2020", // Updates target to a newer ES version for modern features
		"module": "commonjs", // Keeps the module system as CommonJS
		"esModuleInterop": true, // Enables ES module interop for compatibility
		"forceConsistentCasingInFileNames": true, // Enforces consistent file name casing
		"strict": false, // Enables all strict type-checking options
		"skipLibCheck": true, // Skips type-checking for declaration files
		"baseUrl": "./", // Sets the base directory for resolving paths
		"paths": {
			// Adds support for module path aliases
			"@utils/*": ["utils/*"],
			"@configs/*": ["configs/*"]
		},
		"outDir": "./dist", // Specifies the output directory for compiled files
		"rootDir": "./", // Specifies the root directory of input files
		"sourceMap": true, // Generates source maps for debugging
		"incremental": true, // Enables incremental compilation for faster builds
		"strictNullChecks": true, // Ensures stricter null checks
		"noImplicitAny": false, // Disallows variables with an implicit 'any' type
		"noUnusedLocals": false, // Warns about unused local variables
		"noUnusedParameters": false, // Warns about unused function parameters
		"noImplicitReturns": false, // Ensures all code paths return a value in functions
		"noFallthroughCasesInSwitch": true // Ensures no fallthrough cases in switch statements
	},
	"include": [
		"src/**/*.ts" // Include all TypeScript files in the src folder
	],
	"exclude": ["node_modules"] // Excludes unnecessary files and directories
}
